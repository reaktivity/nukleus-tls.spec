property nukleiRG010001C ${nuklei:directory("target/nukleus-itests").controlCapacity(1024, 1024)}

property controlRG010001C ${nukleiRG010001C.control()}

property routeAuthorization 0x0000_000000000000L # external scope

connect "agrona://stream/bidirectional"
        option agrona:reader ${agrona:broadcastReceiver(controlRG010001C.controller)}
        option agrona:writer ${agrona:manyToOneWriter(controlRG010001C.nukleus)}

connected

#
# route with ALPN "protocol2"
#
write 0x00000001
write ${controlRG010001C.nextCorrelationId()}
write ${core:string("tls")}
write [0x00]
write 0L
write ${core:string("net#0")}
write ${core:string("app#0")}
write ${tls:routeEx()
           .store("server")
           .hostname("localhost")
           .protocol("protocol2")
           .build()}
write flush

read 0x40000001
read ${controlRG010001C.correlationId()}
read (long:newServerRouteId)

#
# route with no ALPN protocol
#
write 0x00000001
write ${controlRG010001C.nextCorrelationId()}
write ${core:string("tls")}
write [0x00]
write 0L
write ${core:string("net#0")}
write ${core:string("app#0")}
write ${tls:routeEx()
           .store("server")
           .hostname("localhost")
           .protocol(null)
           .build()}
write flush

read 0x40000001
read ${controlRG010001C.correlationId()}
read (long:newServerRouteId)

read notify ROUTED_SERVER

close
closed
