property newClientAcceptRef  ${nukleus:newRouteRef()} # external
property authorization 0L

property client10k ${tls:randomBytes(10240)}

connect await ROUTED_CLIENT
        "nukleus://tls/streams/source"
  option nukleus:route ${newClientAcceptRef}
  option nukleus:authorization ${authorization}
  option nukleus:window 65536
  option nukleus:transmission "duplex"
  option nukleus:throttle "message"
  option tls:keyStoreFile "src/test/democa/localhost"
  option tls:keyStorePassword "generated"

write nukleus:begin.ext [0x09] "localhost"
write nukleus:begin.ext [0xff]          # null application protocol

connected

write "Hello, world"

read "Hello, world"

