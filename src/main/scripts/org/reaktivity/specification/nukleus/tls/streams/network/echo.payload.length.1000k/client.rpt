property client1000k ${tls:randomBytes(1024000)}

connect "tls://localhost:9090"
  option tls:transport "nukleus://streams/net#0"
  option tls:trustStoreFile "src/test/democa/cacerts"
  option tls:trustStorePassword "generated"
  option nukleus:window 81920
  option nukleus:padding 0
  option nukleus:transmission "duplex"
  option nukleus:throttle "message"
connected

write ${client1000k}

read ${client1000k}

